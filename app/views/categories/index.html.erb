<%= render partial: 'shared/navbar' %>
<main class="container-fluid main-container">
<div class="groups_container">
<% @categories.each do |category| %>
  <div class="container-fluid catergory-card">
  <%= image_tag category.icon  %>
  <div class= "name_date">
  <h3><%=link_to category.name, category_expenses_path(category.id)%></h3>
  <p>
  <%= category.created_at.strftime("%B %d %Y") %>
</p>
</div>
  <% total_price = 0 %>
  <% @expense_categories.each do |group| %>
    <% if group.category_id == category.id %>
    <% total_price += group.expense.amount %> 
    <% end %>
    <% end %>
  <p>$<%= total_price %></></p>
  </div>
<% end %>
</div>
<div class="fixed-bottom">
  <div class="btn_container">
  <%= link_to "Add new Category", new_category_path, class:"btn_size" %>
  </div>
</div>  
</main>